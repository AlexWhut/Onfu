rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Usernames mapping
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.uid
                    && request.resource.data.uid is string;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
      allow update: if false;
    }

    // Users / profiles
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;

      match /followers/{followerId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid == followerId;
        allow delete: if request.auth != null && (request.auth.uid == followerId || request.auth.uid == userId);
        allow update: if false;
      }

      match /following/{followingId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid == userId && followingId is string;
        allow delete: if request.auth != null && request.auth.uid == userId;
        allow update: if false;
      }
    }

    // Posts
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.ownerId == request.auth.uid
                    && request.resource.data.imageUrl is string;
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // Allow updates by owner, or updates that *only* change likesCount.
      // For updates, `request.resource.data` contains only the fields being
      // written. We allow the update when the authenticated user is the
      // owner, or when the update touches only the `likesCount` field.
      // NOTE: Relaxed condition: allow update if the request is from the owner
      // or if the update payload contains the `likesCount` key (this accepts
      // transactions that only change likesCount). This is slightly more
      // permissive than `hasOnly`, but avoids some edge cases where the
      // request payload may contain additional metadata keys added by the SDK.
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.ownerId
        || request.resource.data.keys().hasAny(['likesCount'])
      );
    }

    // Likes subcollection
    match /posts/{postId}/likes/{likeId} {
      allow read: if true;
      // Allow an authenticated user to create their own like document.
      // (Restricting likes to followers requires a schema change or additional
      // indexed data on the user document so rules can check membership.)
      allow create: if request.auth != null
                    && request.auth.uid == likeId
                    && request.resource.data.uid == likeId;
      allow delete: if request.auth != null && (
        request.auth.uid == likeId
        || request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.ownerId
      );
      allow update: if false;
    }

    // Conversations/messages
    match /conversations/{convId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants && request.resource.data.participants.size() >= 2;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(convId)).data.participants;
        allow create: if request.auth != null
                      && request.resource.data.senderId == request.auth.uid
                      && request.auth.uid in get(/databases/$(database)/documents/conversations/$(convId)).data.participants
                      && request.resource.data.keys().hasAll(['senderId','createdAt'])
                      && (request.resource.data.text is string || request.resource.data.attachmentUrl is string);
        allow update, delete: if false;
      }
    }

    match /verification_docs/{docId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && (request.auth.uid == resource.data.uid);
      allow delete: if request.auth != null && (request.auth.uid == resource.data.uid);
      allow update: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
